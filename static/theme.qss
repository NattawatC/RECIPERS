QPushButton#user_base_page:hover {
    color: #F9F5F0;
}

/* QToolButton */
QToolButton#filter_button{
    background-color: #D9A32B;
    color: #F6F6F6;
    border: none;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    padding: 5px;
}

QToolButton#filter_button::menu-indicator{
    image: none;
}

/* QMenu */
QMenu#filter_menu{
    background-color: #A27E38;
    border: none;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
}

/* QMessageBox */
QMessageBox#user_message_box{
    background-color: #D9A32B;
}

QMessageBox QLabel{
    color: #F6F6F6;
    background-color: transparent;
}

QMessageBox QPushButton{
    background-color: transparent;
    color: #F6F6F6;
    border-radius: 5px;
    border: 1px solid #F6F6F6;
    padding: 5px;
}