}

/* CheckBox */
QCheckBox{
    background-color: transparent;
    color: #F6F6F6;
    padding-left: 10px;
}

QCheckBox::indicator:checked{
    background: #95424E;
    color: #F6F6F6;
    border-radius: 2px;

}

/* 
    Log In Page
*/

QPushButton#logIn_button {
    background-color: #D9A32B;
    border: none;
}

QPushButton#logIn_button:hover {
    background-color: #DEB14D;
}

