} */

QPushButton#card_detail_btn{
    background-color: #D9A32B;
    border: none;
    border-radius: 5px;
    padding-right: 14px;
}

QPushButton#card_detail_btn::hover{
    background-color: #DEB14D;
}

QPushButton#nav_button {
    background-color: transparent;
    color: #F6F6F6;
}

QPushButton#nav_button:hover {
    color: #D9A32B;
    font-weight: bold;
}

QPushButton#unstared{
    background-color: transparent;
    border: none;
}

QPushButton#logout_button{
    background-color: #D9A32B;
    border: none;
    border-radius: 10px;
}

QPushButton#logout_button::hover{
    background-color: #DEB14D;
}

QPushButton#filter_button{
    background-color: transparent;
    color: #F6F6F6;
}

QPushButton#submit_button{
    background-color: #D9A32B;
    border: none;
    border-radius: 5px;
    padding: 5px;
}

QPushButton#user_button{
    background-color: #D9A32B;
    border: none;
    border-radius: 10px;
}

QPushButton#delete_button{
    background-color: #95424E;
    border: none;
    border-radius: 5px;
}

QPushButton#delete_button::hover{
    background-color: #A15862;
}

